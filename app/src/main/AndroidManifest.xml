<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adopet">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNo">
        <activity android:name=".DeskripsiAdopsi"></activity>
        <activity
            android:name=".UbahKataSandi"
            android:label="@string/ubah_data_diri"
            android:parentActivityName=".PengaturanAkun"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".UbahDataDiri"
            android:label="@string/ubah_data_diri"
            android:parentActivityName=".PengaturanAkun"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PengaturanAkun"
            android:label="@string/pengaturan_akun"
            android:noHistory="true"
            android:theme="@style/AppTheme" />
        <activity android:name=".Register" />
        <activity
            android:name=".Login"
            android:fitsSystemWindows="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Menu_utama"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".test"
            android:theme="@style/AppTheme">

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>